@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<div class="container">
    <div class="row">
        <div class="mx-auto col-md-6 col-10 bg-white p-5">
            <h1 class="mb-4">Se connecter</h1>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nom@exemple.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mot de passe" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <a href="#"> Mot de passe oublié ?</a>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <button id="login-submit" type="submit" class="btn btn-primary">Connexion</button>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">
                            Mot de passe oublié ?
                        </a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Pas de compte ? Inscrivez-vous ici</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                            Renvoyer l'e-mail de confirmation
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}